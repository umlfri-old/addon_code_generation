<?xml version="1.0" ?>
<Template diagram="Class Diagram" language="Python" type="Code">
    <Element id="Package">
        <Directory name="{name}" value="[_0-9a-zA-Z]+">
            <Recursive>
                <AllowElement id="All" />
            </Recursive>
        </Directory>
    </Element>
    <Element id="Class">
        <File name="#name" value="[_0-9a-zA-Z]+\.py" sufix=".py">
            class <whitespace />
            <Property id="#name" value="[a-z0-9A-Z]+" />

            <Optional> 
            ( 
                <ConnectionLoop id="type" value="Generalization" separator=", "> 
                   <Property id="@dest">
                        <Property id="#name" value="[a-z0-9A-Z]+" />
                    </Property>
                </ConnectionLoop>
           )
            </Optional>

            :<br required="True" />
            <Indent required="True" defsize="4">
                <Optional>
                    '''
                    <Property id="#Notes" />
                    <br />
                    '''<br />
                </Optional>
                <ConnectionLoop id="type" value="Note Link" separator=", "> 
                    <Property id="@dest">
                        '''
                        <Property id="#Notes" /><br />
                        '''<br />
                    </Property>
                    <Property id="@source">
                        '''<br />
                        <Property id="#Notes" /><br />
                        '''<br />
                    </Property>
                </ConnectionLoop>
                <Recursive>
                    <AllowElement id="Class" />
                </Recursive>
                
                <PropertyLoop id="attributes">
                    <Condition id="@static" value="True">
                        <Property id="@name" />
                        =
                        <Property id="@default" value=".+" default="None" />
                        <Optional>
                            <br />
                            '''
                            <Property id="@doc" />
                            <br />
                            '''<br />
                        </Optional>
                    </Condition>
                </PropertyLoop>
                
                <PropertyLoop id="operations">
                    def <whitespace />
                    <Property id="@name" />
                    (self
                    <Optional>
                        ,
                        <PropertyLoop id="@params" separator="," parse="parseParameter">
                            <Property id="@paramsName" />
                            <Optional>
                                =
                                <Property id="@paramsDefault" />
                            </Optional>     
                        </PropertyLoop> 
                    </Optional>
                    ): <br required="True" />
                    <Indent required="True">
                        <Optional>
                            '''
                            <Property id="@doc" />
                            <br />
                            '''<br />
                        </Optional>
                        <Condition id="@name" value="__init__">
                            <Optional default="pass">
                                <PropertyLoop id="attributes">
                                    <Condition id="@static" value="True" negate="1">
                                        self.<Property id="@name" />
                                        =
                                        <Property id="@default" value=".+" default="None" />
                                            <Optional>
                                                <br />
                                                '''
                                                <Property id="@doc" />
                                                <br />
                                                '''<br />
                                            </Optional>
                                    </Condition>
                                </PropertyLoop>
                            </Optional>
                        </Condition>
                        <Condition id="@name" value="__init__" negate="1">
                            <Property id="@initial" default="pass" />
                        </Condition>
                    </Indent>
                    <br />
                </PropertyLoop>
            </Indent>
        </File>
    </Element>
</Template>